<h1>Novo Paciente</h1>

<%= form_with(model: @paciente) do |f| %>
  <% if @paciente.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@paciente.errors.count, "erro") %> encontrados:</h2>

      <ul>
        <% @paciente.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :nome_completo %>
    <%= f.text_field :nome_completo %>
  </div>

  <div class="field">
    <%= f.label :data_nascimento %>
    <%= f.date_field :data_nascimento %>
  </div>

  <div class="field">
    <%= f.label :cpf %>
    <%= f.text_field :cpf %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <h2>Endere√ßo</h2>
  <%= f.fields_for :endereco do |endereco_fields| %>

    <div class="field">
      <%= endereco_fields.label :cep %>
      <%= endereco_fields.text_field :cep %>
    </div>

    <div class="field">
      <%= endereco_fields.label :cidade %>
      <%= endereco_fields.text_field :cidade %>
    </div>

    <div class="field">
      <%= endereco_fields.label :bairro %>
      <%= endereco_fields.text_field :bairro %>
    </div>

    <div class="field">
      <%= endereco_fields.label :logradouro %>
      <%= endereco_fields.text_field :logradouro %>
    </div>

    <div class="field">
      <%= endereco_fields.label :complemento %>
      <%= endereco_fields.text_field :complemento %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit 'Salvar' %>
  </div>
<% end %>

<%= link_to 'Voltar', pacientes_path %>
