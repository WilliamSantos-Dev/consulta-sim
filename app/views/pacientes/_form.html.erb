<%= form_with(model: paciente) do |form| %>
  <% if paciente.errors.any? || !paciente.endereco.nil? && paciente.endereco.errors.any? %>
    <div style="color: red">
      <ul>
        <% paciente.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
        <% paciente.endereco.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div>
    <%= form.label :nome_completo %>
    <%= form.text_field :nome_completo %>
  </div>

  <div>
    <%= form.label :cpf %>
    <%= form.text_field :cpf %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :data_nascimento %>
    <%= form.date_field :data_nascimento %>
  </div>

  <%= fields_for(:endereco, paciente.endereco) do |f| %>
    <div>
      <%= f.label :cep %>
      <%= f.text_field :cep %>
    </div>

    <div>
      <%= f.label :cidade %>
      <%= f.text_field :cidade %>
    </div>

    <div>
      <%= f.label :bairro %>
      <%= f.text_field :bairro %>
    </div>

    <div>
      <%= f.label :logradouro %>
      <%= f.text_field :logradouro %>
    </div>

    <div>
      <%= f.label :complemento %>
      <%= f.text_field :complemento %>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
